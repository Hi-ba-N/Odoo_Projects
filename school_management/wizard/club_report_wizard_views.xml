<?xml version="1.0" encoding="utf-8" ?>
<odoo>
<record id="club_wizard_action" model="ir.actions.act_window">
        	<field name="name">Club Report</field>
        	<field name="type">ir.actions.act_window</field>
        	<field name="res_model">club.report.wizard</field>
        	<field name="view_mode">form</field>
        	<field name="target">new</field>
</record>

 <record id="club_wizard_view_form" model="ir.ui.view">
       <field name="name">club.wizard.view.form</field>
       <field name="model">club.report.wizard</field>
       <field name="arch" type="xml">
           <form string="String">
               <group>
                   <field name="type"/>
                   <field name="student_ids" invisible="type == 'club' or type==False" widget="many2many_tags"  options="{'no_quick_create': True,
                                           'no_create_edit': True}"/>
                   <field name="club_ids" invisible="type == 'student' or  type==False" widget="many2many_tags"  options="{'no_quick_create': True,
                                           'no_create_edit': True}"/>


               </group>
               <footer>
                   <button name="action_report_club" string="Print Report"  class="oe_highlight" type="object" />
                   <button name="cancel" string="Cancel" special="cancel" class="oe_highlight"/>
               </footer>
           </form>
       </field>
   </record>
</odoo>