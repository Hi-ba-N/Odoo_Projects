<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="workshop.Counter">

        <div class="container text-center ">
            <h1>Counter</h1>

            <div class="py-3 d-flex justify-content-center">
                 <input class="form-control w-25" type="text" t-model="state.value" />
            </div>
            <button class="btn btn-danger me-2" t-on-click="decrement">Decrement -1</button>
            <button class="btn btn-primary " t-on-click="increment">Increment +1</button>
        </div>

    </t>
</templates>